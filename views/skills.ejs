<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Skills Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa;
        }
        .skill-card {
            margin-bottom: 15px;
            transition: transform 0.3s;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .skill-card:hover {
            transform: translateY(-5px);
        }
        .page-header {
            color: #343a40;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }
        .form-card {
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .navbar {
            margin-bottom: 30px;
        }
        .progress {
            height: 10px;
        }
        .category-badge {
            background-color: #6c757d;
            color: white;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
            margin-bottom: 10px;
            display: inline-block;
        }
        .proficiency-beginner { background-color: #28a745; }
        .proficiency-intermediate { background-color: #17a2b8; }
        .proficiency-advanced { background-color: #fd7e14; }
        .proficiency-expert { background-color: #dc3545; }
    </style>
</head>
<body>
<div class="container">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Skill Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/skills">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/categories">Categories</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h1 class="page-header mb-4">Skills Management</h1>

    <div class="row mb-5">
        <div class="col-md-6">
            <button id="showAddSkillForm" class="btn btn-primary mb-3">
                <i class="bi bi-plus-circle"></i> Add New Skill
            </button>
            <div id="addSkillFormContainer" class="card form-card" style="display: none;">
                <div class="card-header bg-primary text-white">
                    Add New Skill
                </div>
                <div class="card-body">
                    <form action="/skills" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Skill Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter skill name" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter skill description"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="proficiencyLevel" class="form-label">Proficiency Level</label>
                            <select class="form-select" id="proficiencyLevel" name="proficiencyLevel">
                                <option value="beginner">Beginner</option>
                                <option value="intermediate">Intermediate</option>
                                <option value="advanced">Advanced</option>
                                <option value="expert">Expert</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Goals</label>
                            <p class="text-muted small">Goals can be added after creating the skill using the "Add Goal" button on the skill detail page.</p>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select" id="category" name="category" required>
                                <option value="">Select a category</option>
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category._id %>"><%= category.name %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Add Skill</button>
                            <button type="button" id="cancelAddSkill" class="btn btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">Skills by Category</h2>
            <% if (categories && categories.length > 0) { %>
                <ul class="nav nav-tabs" id="skillTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">All Skills</button>
                    </li>
                    <% categories.forEach(function(category, index) { %>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="category<%= category._id %>-tab" data-bs-toggle="tab" data-bs-target="#category<%= category._id %>" type="button" role="tab" aria-controls="category<%= category._id %>" aria-selected="false"><%= category.name %></button>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
    </div>

    <div class="tab-content" id="skillTabsContent">
        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
            <div class="row">
                <% if (skills && skills.length > 0) { %>
                    <% skills.forEach(function(skill) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card skill-card">
                                <div class="card-body">
                                    <span class="category-badge"><%= skill.category ? skill.category.name : 'Uncategorized' %></span>
                                    <h5 class="card-title"><%= skill.name %></h5>
                                    <p class="card-text"><%= skill.description || 'No description provided.' %></p>

                                    <div class="mb-2">
                                        <small class="text-muted">Proficiency: </small>
                                        <span class="badge proficiency-<%= skill.proficiencyLevel %>"><%= skill.proficiencyLevel.charAt(0).toUpperCase() + skill.proficiencyLevel.slice(1) %></span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-muted">Progress:</small>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: <%= skill.progress %>%;" aria-valuenow="<%= skill.progress %>" aria-valuemin="0" aria-valuemax="100"><%= skill.progress %>%</div>
                                        </div>
                                    </div>

                                    <a href="/skills/<%= skill._id %>" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info">No skills found. Add your first skill to get started!</div>
                    </div>
                <% } %>
            </div>
        </div>

        <% if (categories && categories.length > 0) { %>
            <% categories.forEach(function(category) { %>
                <div class="tab-pane fade" id="category<%= category._id %>" role="tabpanel" aria-labelledby="category<%= category._id %>-tab">
                    <div class="row">
                        <% 
                            const categorySkills = skills.filter(skill => 
                                skill.category && skill.category._id.toString() === category._id.toString()
                            );
                        %>

                        <% if (categorySkills.length > 0) { %>
                            <% categorySkills.forEach(function(skill) { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card skill-card">
                                        <div class="card-body">
                                            <span class="category-badge"><%= skill.category ? skill.category.name : 'Uncategorized' %></span>
                                            <h5 class="card-title"><%= skill.name %></h5>
                                            <p class="card-text"><%= skill.description || 'No description provided.' %></p>

                                            <div class="mb-2">
                                                <small class="text-muted">Proficiency: </small>
                                                <span class="badge proficiency-<%= skill.proficiencyLevel %>"><%= skill.proficiencyLevel.charAt(0).toUpperCase() + skill.proficiencyLevel.slice(1) %></span>
                                            </div>

                                            <div class="mb-3">
                                                <small class="text-muted">Progress:</small>
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: <%= skill.progress %>%;" aria-valuenow="<%= skill.progress %>" aria-valuemin="0" aria-valuemax="100"><%= skill.progress %>%</div>
                                                </div>
                                            </div>

                                            <a href="/skills/<%= skill._id %>" class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <div class="alert alert-info">No skills found in this category.</div>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Show/hide add skill form
    document.getElementById('showAddSkillForm').addEventListener('click', function() {
        document.getElementById('addSkillFormContainer').style.display = 'block';
        this.style.display = 'none';
    });

    document.getElementById('cancelAddSkill').addEventListener('click', function() {
        document.getElementById('addSkillFormContainer').style.display = 'none';
        document.getElementById('showAddSkillForm').style.display = 'block';
    });
</script>
</body>
</html>
